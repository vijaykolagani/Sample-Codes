
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:classes="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">




            <LinearLayout
                android:id="@+id/place_visit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/middle_pannel_bg"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/place_layout"
                >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="286dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:id="@+id/fl_place_visit_pic">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/image_top_black_header"
                        android:gravity="center_vertical">

                        <com.appzollo.classes.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_heading"
                            android:text="Desert Village near Udaipur"
                            android:textColor="#fff"
                            classes:fontName="seguisb.ttf"
                            android:textSize="16dp"
                            android:padding="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="55dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bt_placevisit"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:padding="3dp"
                            android:background="@drawable/events"
                            android:text="Place to Visit"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminate="true" />

                </FrameLayout>



                <ImageView
                    android:id="@+id/iv_visit"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:background="#999" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp">

                        <com.appzollo.classes.MyTextView
                            android:id="@+id/tv_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/marker_icon"
                            android:drawablePadding="5dp"
                            android:text="20Km"
                            android:textSize="16sp"
                            classes:fontName="segoeuib.ttf"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:padding="2dp" />

                        <com.appzollo.classes.MyTextView
                            android:id="@+id/tv_place_two_visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:padding="2dp"
                            classes:fontName="seguisb.ttf"
                            android:layout_gravity="left"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical"
                        >

                        <com.appzollo.classes.MyTextView
                            android:id="@+id/tv_place_typevisit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="How to reach"
                            android:textSize="16sp"
                            classes:fontName="segoeuib.ttf"
                            android:textStyle="bold"

                            />

                        <com.appzollo.classes.MyTextView
                            android:id="@+id/tv_howtoreach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take a train from Jodhpur there are lots of busses..."
                            android:layout_gravity="left"
                            classes:fontName="segoeui.ttf"
                            android:maxLines="2" />
                    </LinearLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:paddingBottom="10dp">

                    <FrameLayout
                        android:id="@+id/fl_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_bar"
                        android:paddingLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="55dp"
                                android:layout_weight="1">

                                <com.appzollo.classes.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="17sp"
                                    android:singleLine="true"
                                    classes:fontName="latosb.ttf"
                                    android:id="@+id/tv_name"
                                    android:textStyle="bold" />

                                <com.appzollo.classes.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 hrs ago"
                                    classes:fontName="latom.ttf"
                                    android:textColor="#999"
                                    android:id="@+id/tv_timeago" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="10dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/iv_broadcast1"
                                    android:src="@drawable/speaker_icon" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="10dp">

                                    <com.appzollo.classes.MyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Broadcasted"
                                        classes:fontName="seguisb.ttf"
                                        android:id="@+id/tv_broadcasted_plansticker"
                                        android:textColor="#999"
                                        android:textSize="16sp" />

                                    <com.appzollo.classes.MyTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="near Delhi"
                                        classes:fontName="seguisb.ttf"
                                        android:id="@+id/tv_city" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_icon_border"
                        android:padding="2dp"
                        android:layout_gravity="left|top"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp" >
                        <com.appzollo.classes.RoundedImageView
                            android:id="@+id/iv_profile_icon_visit"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    android:id="@+id/ll_comment_been">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"

                        android:id="@+id/ll_beenthere"
                        android:gravity="center">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:clickable="false"
                            android:id="@+id/tv_beenthere"
                            android:drawableLeft="@drawable/beenthere"
                            android:background="@null" />

                        <com.appzollo.classes.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Been there? verify"
                            android:id="@+id/tv_place_interest_visit"
                            android:clickable="false"
                            classes:fontName="latom.ttf"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout_visit"
                        android:gravity="center"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:id="@+id/tv_comment"
                            android:clickable="false"
                            android:drawableLeft="@drawable/comment_icon"
                            android:background="@null" />

                        <com.appzollo.classes.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:clickable="false"
                            classes:fontName="latom.ttf"
                            android:id="@+id/tv_comment_visit"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
                   </RelativeLayout>

    </ScrollView>

</LinearLayout>