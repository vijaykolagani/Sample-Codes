<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#464646"
    android:padding="10dp"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Provide your contact number here to get call from this organizer"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/price_box"
            android:orientation="horizontal"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" >
        <Spinner
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/country_array"
            android:background="#00000000"/>
            </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_number"
            android:textCursorDrawable="@drawable/cursor"
            android:background="@drawable/activity_box"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of people"
            android:textColor="#ffffff"
            android:id="@+id/textView3" />
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:background="@drawable/price_box"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:id="@+id/ll_spinner">
            <Spinner
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:entries="@array/no_array"
                android:background="#00000000"
                android:drawableLeft ="@drawable/dropdown"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background ="@drawable/dropdown"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            </RelativeLayout>


    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check this if you want to receive calls from other organaziers for this event around this location"
        android:id="@+id/checkBox"
        android:textColor="#ffffff"
        android:button="@drawable/checkbox_style"
        android:layout_marginTop="10dp" />

    <TextView
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:id="@+id/bt_done"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:background="#ff9d04"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />
</LinearLayout>
