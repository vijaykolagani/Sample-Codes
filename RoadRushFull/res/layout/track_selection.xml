<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roads"
    android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/track_one"
                android:layout_width="@dimen/track_width"
                android:layout_height="@dimen/track_height"
                android:layout_margin="5dp"
                android:src="@drawable/track_one" />

            <ImageView
                android:id="@+id/track_two"
                android:layout_width="@dimen/track_width"
                android:layout_height="@dimen/track_height"
                android:layout_margin="5dp"
                android:src="@drawable/track_two" />

            <ImageView
                android:id="@+id/track_three"
                android:layout_width="@dimen/track_width"
                android:layout_height="@dimen/track_height"
                android:layout_margin="5dp"
                android:src="@drawable/track_three" />

            <ImageView
                android:id="@+id/track_four"
                android:layout_width="@dimen/track_width"
                android:layout_height="@dimen/track_height"
                android:layout_margin="5dp"
                android:src="@drawable/track_four" />

        </LinearLayout>
</HorizontalScrollView>