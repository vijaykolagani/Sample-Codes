<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addition_four_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nature_bg"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/level_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/ImageView06"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:src="@drawable/daisy_flower" />

            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:src="@drawable/daisy_flower" />

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:src="@drawable/daisy_flower" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:src="@drawable/daisy_flower" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/menu_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2dp"
                android:text="@string/plus"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:width="25dp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:layout_marginLeft="5dp"
                android:src="@drawable/daisy_flower" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/menu_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2dp"
                android:text="@string/plus"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:width="25dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:layout_margin="10dp"
                android:src="@drawable/daisy_flower" />

            <ImageView
                android:id="@+id/option_image_one"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:src="@drawable/daisy_flower" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="@dimen/banana_width"
                android:layout_height="@dimen/banana_height"
                android:src="@drawable/daisy_flower" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/menu_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2dp"
                android:text="@string/equals"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:width="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/option_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/eight"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/four"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/seven"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/nine"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>