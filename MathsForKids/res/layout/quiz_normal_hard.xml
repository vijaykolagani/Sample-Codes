<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quiz_normal_easy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nature_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/score_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="125dp" >

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/option_bg"
                android:gravity="right|center_horizontal"
                android:text="Score : 0"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:width="120dp" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="@dimen/star_width"
                android:layout_height="@dimen/start_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/gold_star" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="125dp" >

            <TextView
                android:id="@+id/best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/option_bg"
                android:gravity="right|center_horizontal"
                android:text="Best : 0"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:width="120dp" />

            <ImageView
                android:id="@+id/medal"
                android:layout_width="@dimen/medal_width"
                android:layout_height="@dimen/medal_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/gold_medal" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/value_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:gravity="center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/one"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:width="80dp" />

            <TextView
                android:id="@+id/symbol_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2dp"
                android:text="@string/plus"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:width="25dp" />

            <TextView
                android:id="@+id/value_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:gravity="center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/one"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:width="80dp" />

            <TextView
                android:id="@+id/symbol_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2dp"
                android:text="@string/plus"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:width="25dp" />

            <TextView
                android:id="@+id/value_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:gravity="center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/ten"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:width="80dp" />

            <TextView
                android:id="@+id/symbol_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2dp"
                android:text="@string/plus"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:width="25dp" />

            <TextView
                android:id="@+id/value_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:gravity="center_vertical|center_horizontal"
                android:padding="20dp"
                android:text="@string/one"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:width="80dp" />

            <TextView
                android:id="@+id/equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2dp"
                android:text="@string/equals"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:width="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/option_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/twleve"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/ten"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/fourteen"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/option_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/option_state"
                android:text="@string/eleven"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>