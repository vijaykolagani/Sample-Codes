<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:background="@drawable/blank"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="@string/heading"
        android:textColor="@color/textcolor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/white_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/egg_white"
                    android:layout_width="@dimen/egg_width"
                    android:layout_height="@dimen/egg_height"
                    android:src="@drawable/egg_white" />

                <TextView
                    android:id="@+id/cross_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/cross"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/egg_white_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="50"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pink_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/egg_pink"
                    android:layout_width="@dimen/egg_width"
                    android:layout_height="@dimen/egg_height"
                    android:src="@drawable/egg_pink" />

                <TextView
                    android:id="@+id/cross_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/cross"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/egg_pink_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="50"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cyan_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/egg_cyan"
                    android:layout_width="@dimen/egg_width"
                    android:layout_height="@dimen/egg_height"
                    android:src="@drawable/egg_cyan" />

                <TextView
                    android:id="@+id/cross_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/cross"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/egg_cyan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="50"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/gold_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/egg_gold"
                    android:layout_width="@dimen/egg_width"
                    android:layout_height="@dimen/egg_height"
                    android:src="@drawable/egg_gold" />

                <TextView
                    android:id="@+id/cross_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/cross"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/egg_gold_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="50"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grey_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/egg_grey"
                    android:layout_width="@dimen/egg_width"
                    android:layout_height="@dimen/egg_height"
                    android:src="@drawable/egg_grey" />

                <TextView
                    android:id="@+id/cross_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/cross"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/egg_grey_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="50"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orange_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:padding="3dp" >

                <ImageView
                    android:id="@+id/egg_orange"
                    android:layout_width="@dimen/egg_width"
                    android:layout_height="@dimen/egg_height"
                    android:src="@drawable/egg_white" />

                <TextView
                    android:id="@+id/cross_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/cross"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/egg_orange_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="50"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/bt_yes"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="50dp"
            android:padding="5dp"
            android:src="@drawable/yes" />

        <ImageView
            android:id="@+id/bt_no"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="50dp"
            android:padding="5dp"
            android:src="@drawable/no" />

    </LinearLayout>

</LinearLayout>