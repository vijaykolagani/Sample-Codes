<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="5dp" >

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#11000000"
        android:padding="5dp" >

        <Button
            android:id="@+id/imCancle"
            android:layout_width="43dp"
            android:layout_height="32dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel" />

        <EditText
            android:id="@+id/editReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter text here"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:ems="10" 
            android:textColor="#00aae9">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/imSend"
            android:layout_width="45dp"
            android:layout_height="34dp"
            android:background="@android:drawable/ic_menu_send" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/speaklayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutBottom"
        android:orientation="vertical">
        
        <Button
            android:id="@+id/speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#00aee9"
            android:text="speak"
            android:textColor="#fff"
            android:textStyle="bold|italic" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_above="@+id/speaklayout">

        <TextView
            android:id="@+id/reply_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Number"
            android:textStyle="bold"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="" 
            android:textColor="#4db849"/>

        

    </LinearLayout>

</RelativeLayout>